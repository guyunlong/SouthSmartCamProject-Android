<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/button_shape_white_nor"
    tools:context=".Activity.ChangeDevicePwdActivity">

    <TextView
        android:id="@+id/text_uid"
        android:layout_width="65dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="ID :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_uid_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textColor="@color/appGreenColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_uid"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/text_old_pwd"
        android:layout_width="65dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="@string/device_old_pwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_uid"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_old_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_old_pwd"
        app:layout_constraintTop_toBottomOf="@+id/text_uid"
        app:passwordToggleEnabled="true">

        <AutoCompleteTextView
            android:id="@+id/editText_old_pwd"
            android:hint="@string/device_old_pwd"
            android:inputType="textPassword"
            android:text="admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/text_new_pwd"
        android:layout_width="65dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="@string/device_new_pwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_old_pwd" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_new_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_new_pwd"
        app:layout_constraintTop_toBottomOf="@+id/layout_old_pwd"
        app:passwordToggleEnabled="true">

        <AutoCompleteTextView
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/device_new_pwd"
            android:inputType="textPassword"
            />

    </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/text_confirm_pwd"
        android:layout_width="70dp"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="@string/device_confirm_pwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_new_pwd" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_confirm_pwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_confirm_pwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/layout_new_pwd"
        app:passwordToggleEnabled="true"
        >

        <AutoCompleteTextView
            android:id="@+id/editText_confirm_pwd"
            android:hint="@string/device_confirm_pwd"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/button_next"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_green_corner"
        android:textColor="#ffffff"
        android:text="@string/action_change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_confirm_pwd" />
</android.support.constraint.ConstraintLayout>