<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PlayLiveActivity">

    <stcam.stcamproject.View.GLSurfaceViewLive
        android:id="@+id/glPlayLive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/layout_control"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/glPlayLive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <stcam.stcamproject.View.VoiceImageButton
                android:id="@+id/button_snapshot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:src="@drawable/btnsnapshot"
                android:scaleType="fitCenter"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="391dp" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_speech"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:src="@drawable/microphonedefault"
                android:scaleType="fitCenter"
                tools:layout_editor_absoluteX="178dp"
                tools:layout_editor_absoluteY="391dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <stcam.stcamproject.View.VoiceImageButton
                android:id="@+id/button_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/btnrecorddefault"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="391dp" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:id="@+id/layout_land"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <stcam.stcamproject.View.VoiceImageButton
            android:id="@+id/button_snapshot_o"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/btnsnapshot"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/button_speech_o"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/microphonedefault"
            android:background="@android:color/transparent" />

        <stcam.stcamproject.View.VoiceImageButton
            android:id="@+id/button_record_o"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="30dp"

            android:src="@drawable/btnrecorddefault"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/layout_bottom"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageButton
                android:id="@+id/button_slient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:src="@drawable/talk_nor"
                android:scaleType="fitCenter"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="391dp" />




            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_led"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/action_led"
                tools:layout_editor_absoluteX="178dp"
                tools:layout_editor_absoluteY="391dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_ptz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/action_ptz"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="391dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_pix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/action_pix_low"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="391dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <include
        layout="@layout/layout_ptz_view"
        android:visibility="invisible"
        android:layout_width="300dp"
        android:layout_height="216dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>